<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
        name="component"
        label="COM_TURISMO_COMPONENT_LABEL"
        description="COM_TURISMO_COMPONENT_DESC"
    >
        <field
            name="show_category"
            type="radio"
            label="COM_TURISMO_SHOW_CATEGORY_LABEL"
            description="COM_TURISMO_SHOW_CATEGORY_DESC"
            class="btn-group btn-group-yesno"
            default="1"
            >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="items_per_page"
            type="number"
            label="COM_TURISMO_ITEMS_PER_PAGE_LABEL"
            description="COM_TURISMO_ITEMS_PER_PAGE_DESC"
            default="20"
            min="1"
            max="100"
        />
    </fieldset>

    <fieldset
        name="map"
        label="COM_TURISMO_SHOW_MAP_LABEL"
        description="COM_TURISMO_SHOW_MAP_DESC"
    >
        <field
            name="show_map"
            type="radio"
            label="COM_TURISMO_SHOW_MAP_LABEL"
            description="COM_TURISMO_SHOW_MAP_DESC"
            class="btn-group btn-group-yesno"
            default="1"
            >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="map_api_key"
            type="text"
            label="COM_TURISMO_MAP_API_KEY_LABEL"
            description="COM_TURISMO_MAP_API_KEY_DESC"
            size="50"
        />
    </fieldset>

    <fieldset
        name="integration"
        label="COM_TURISMO_INTEGRATION_LABEL"
        description="COM_TURISMO_INTEGRATION_DESC"
    >
        <field
            name="enable_bootstrap"
            type="radio"
            label="COM_TURISMO_ENABLE_BOOTSTRAP_LABEL"
            description="COM_TURISMO_ENABLE_BOOTSTRAP_DESC"
            class="btn-group btn-group-yesno"
            default="1"
            >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="enable_jquery"
            type="radio"
            label="COM_TURISMO_ENABLE_JQUERY_LABEL"
            description="COM_TURISMO_ENABLE_JQUERY_DESC"
            class="btn-group btn-group-yesno"
            default="1"
            >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="custom_css"
            type="textarea"
            label="COM_TURISMO_CUSTOM_CSS_LABEL"
            description="COM_TURISMO_CUSTOM_CSS_DESC"
            rows="10"
            cols="50"
            filter="raw"
        />
    </fieldset>

    <fieldset
        name="images"
        label="COM_TURISMO_IMAGES_LABEL"
        description="COM_TURISMO_IMAGES_DESC"
    >
        <field
            name="image_path"
            type="text"
            label="COM_TURISMO_IMAGE_PATH_LABEL"
            description="COM_TURISMO_IMAGE_PATH_DESC"
            default="images/turismo"
            size="50"
        />

        <field
            name="max_image_size"
            type="number"
            label="COM_TURISMO_MAX_IMAGE_SIZE_LABEL"
            description="COM_TURISMO_MAX_IMAGE_SIZE_DESC"
            default="5242880"
            min="1048576"
            max="10485760"
        />

        <field
            name="allowed_extensions"
            type="text"
            label="COM_TURISMO_ALLOWED_EXTENSIONS_LABEL"
            description="COM_TURISMO_ALLOWED_EXTENSIONS_DESC"
            default="jpg,jpeg,png,gif"
            size="50"
        />
    </fieldset>

    <fieldset
        name="permissions"
        label="JCONFIG_PERMISSIONS_LABEL"
        description="JCONFIG_PERMISSIONS_DESC"
    >
        <field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            validate="rules"
            filter="rules"
            component="com_turismo"
            section="component"
        />
    </fieldset>
</config>
