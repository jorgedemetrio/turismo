<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\Categories\Administrator\Field">
    <fieldset name="details" label="COM_TURISMO_TIPOLOCAL_DETAILS">
        <field
            name="id"
            type="hidden"
            default="0"
        />

        <field
            name="nome"
            type="text"
            label="COM_TURISMO_TIPOLOCAL_NOME_LABEL"
            description="COM_TURISMO_TIPOLOCAL_NOME_DESC"
            class="input-xxlarge"
            size="40"
            required="true"
        />

        <field
            name="estabelecimento"
            type="radio"
            label="COM_TURISMO_TIPOLOCAL_ESTABELECIMENTO_LABEL"
            description="COM_TURISMO_TIPOLOCAL_ESTABELECIMENTO_DESC"
            class="btn-group btn-group-yesno"
            default="1"
            >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="catid"
            type="categoryedit"
            label="JCATEGORY"
            description="JFIELD_CATEGORY_DESC"
            extension="com_turismo"
            required="true"
            addfieldprefix="Joomla\Component\Categories\Administrator\Field"
        />

        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="form-select-color-state"
            default="1"
            validate="options"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="ordering"
            type="ordering"
            label="JFIELD_ORDERING_LABEL"
            description="JFIELD_ORDERING_DESC"
            content_type="com_turismo.tipolocal"
        />

        <field
            name="created"
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            description="JGLOBAL_FIELD_CREATED_DESC"
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc"
            readonly="true"
        />

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            description="JGLOBAL_FIELD_CREATED_BY_DESC"
            readonly="true"
        />

        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            description="JGLOBAL_FIELD_MODIFIED_DESC"
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc"
            readonly="true"
        />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            description="JGLOBAL_FIELD_MODIFIED_BY_DESC"
            readonly="true"
        />

        <field
            name="checked_out"
            type="hidden"
            filter="unset"
        />

        <field
            name="checked_out_time"
            type="hidden"
            filter="unset"
        />
    </fieldset>
</form>
