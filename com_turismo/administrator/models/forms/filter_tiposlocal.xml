<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\Categories\Administrator\Field">
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_TURISMO_FILTER_SEARCH_LABEL"
            description="COM_TURISMO_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />

        <field
            name="state"
            type="status"
            label="JOPTION_SELECT_PUBLISHED"
            description="JOPTION_SELECT_PUBLISHED_DESC"
            onchange="this.form.submit();"
            >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field
            name="category_id"
            type="category"
            label="JOPTION_SELECT_CATEGORY"
            extension="com_turismo"
            onchange="this.form.submit();"
            >
            <option value="">JOPTION_SELECT_CATEGORY</option>
        </field>

        <field
            name="estabelecimento"
            type="list"
            label="COM_TURISMO_FILTER_ESTABELECIMENTO_LABEL"
            onchange="this.form.submit();"
            >
            <option value="">COM_TURISMO_FILTER_ESTABELECIMENTO_SELECT</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            default="a.nome ASC"
            onchange="this.form.submit();"
            >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.state ASC">JSTATUS_ASC</option>
            <option value="a.state DESC">JSTATUS_DESC</option>
            <option value="a.nome ASC">COM_TURISMO_HEADING_NAME_ASC</option>
            <option value="a.nome DESC">COM_TURISMO_HEADING_NAME_DESC</option>
            <option value="category_title ASC">JCATEGORY_ASC</option>
            <option value="category_title DESC">JCATEGORY_DESC</option>
            <option value="a.estabelecimento ASC">COM_TURISMO_HEADING_ESTABELECIMENTO_ASC</option>
            <option value="a.estabelecimento DESC">COM_TURISMO_HEADING_ESTABELECIMENTO_DESC</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            label="JGLOBAL_LIST_LIMIT"
            default="25"
            onchange="this.form.submit();"
        />
    </fields>
</form>
